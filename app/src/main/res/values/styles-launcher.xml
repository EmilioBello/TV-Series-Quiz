<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.LayoutLauncher">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Image.Launcher">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_xlarge</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="AppTheme.Layout.Vertical.Launcher">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">@dimen/spacing_medium</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="AppTheme.TextView.Text.Launcher">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/spacing_xsmall</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:gravity">center</item>

    </style>

</resources>